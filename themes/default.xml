<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE korganizer-theme>
<korganizer-theme version="1.0">
  <grid>
    <background color="#FFFFFF"/>
    <highlight color="#6464FF"/>
  </grid>
  <calendar-items>
    <font point-size="8"/>
  </calendar-items>
  <view type="Agenda">
    <grid>
      <background src="tux-filigrane.png"/><!-- This is only to test fancy things :) -->
      <work-hours>
        <background color="#E1E1FF"/>
      </work-hours>
    </grid>
    <time-labels>
      <font point-size="16"/>
    </time-labels>
    <calendar-items>
      <events>
        <font point-size="6"/>
      </events>
    </calendar-items>
  </view>
  <marcus-bains-line>
    <font point-size="8"/>
    <line color="#FF0000"/>
  </marcus-bains-line>
  <calendar-items>
    <background color="#97EB79"/>
    <events>
      <icon name="view-calendar-day"/>
    </events>
    <to-dos>
      <icon name="view-calendar-task"/>
      <due-today>
        <background color="#FFC832"/>
      </due-today>
      <overdue>
        <background color="#FF6464"/>
        <font weight="75"/>
      </overdue>
    </to-dos>
    <categories>
      <category name="Appointment">
        <background src="rendez-vous.png"/><!-- FIXME: for testing only -->
        <background color="#DDDDDD"/><!-- FIXME: for testing only -->
      </category>
      <category name="Birthday">
        <background color="#FFFF64"/><!-- FIXME: for testing only -->
      </category>
      <category name="Business">
      </category>
      <category name="Education">
      </category>
      <category name="Holiday">
      </category>
      <category name="Meeting">
      </category>
      <category name="Miscellaneous">
      </category>
      <category name="Personal">
      </category>
      <category name="Phone Call">
      </category>
      <category name="Special Occasion">
      </category>
      <category name="Travel">
      </category>
      <category name="Vacation">
      </category>
    </categories>
    <resources>
      <resource name="Default Calendar">
      </resource>
      <resource name="Birthdays">
        <background color="#FFFF64"/><!-- FIXME: for testing only -->
      </resource>
    </resources>
    <frame color="#D8DBD5"/>
  </calendar-items>
  <holidays>
    <background color="#FF6464"/>
  </holidays>
</korganizer-theme>
