<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE korganizer-theme>
<korganizer-theme version="1.0">
  <grid>
    <background color="#FFFFFF"/>
  </grid>
  <calendar-items>
    <font point-size="8"/>
  </calendar-items>
  <view type="Agenda">
    <grid>
      <background src="tux-filigrane.png"/><!-- This is only to test fancy things :) -->
      <work-hours>
        <background color="#E1E1FF"/>
      </work-hours>
    </grid>
    <time-labels>
      <font point-size="16"/>
    </time-labels>
    <calendar-items>
      <events>
        <font point-size="6"/>
      </events>
    </calendar-items>
  </view>
  <marcus-bains-line>
    <font point-size="8"/>
    <line color="#FF0000"/>
  </marcus-bains-line>
  <calendar-items>
    <background color="#97EB79"/>
    <events>
      <icon name="event"/>
    </events>
    <to-dos>
      <icon name="to-do"/>
      <due-today>
        <background color="#FFC832"/>
      </due-today>
      <overdue>
        <background color="#FF6464"/>
        <font weight="75"/>
      </overdue>
    </to-dos>
    <categories>
      <category name="Appointment">
        <background src="rendez-vous.png"/><!-- FIXME: for testing only -->
        <background color="#DDDDDD"/><!-- FIXME: for testing only -->
      </category>
      <category name="Birthday">
        <background color="#FFFF64"/><!-- FIXME: for testing only -->
      </category>
      <category name="Business">
      </category>
      <category name="Education">
      </category>
      <category name="Holiday">
      </category>
      <category name="Meeting">
      </category>
      <category name="Miscellaneous">
      </category>
      <category name="Personal">
      </category>
      <category name="Phone Call">
      </category>
      <category name="Special Occasion">
      </category>
      <category name="Travel">
      </category>
      <category name="Vacation">
      </category>
    </categories>
    <resources>
      <resource name="Default Calendar">
      </resource>
      <resource name="Birthdays">
        <background color="#FFFF64"/><!-- FIXME: for testing only -->
      </resource>
    </resources>
    <frame color="#D8DBD5"/>
  </calendar-items>
  <holidays>
    <background color="#FF6464"/>
  </holidays>
  <year value="1534">
<!--    <month value="1">
      <day value="1">-->
        <!-- Konqi's birthday, TODO: make it special! -->
        <view type="Agenda">
          <grid>
            <background src="konqui.png"/>
          </grid>
          <calendar-items>
            <events>
              <icon src="Scotland-flag.png"/><!-- he's born in the Highlands after all :) -->
            </events>
          </calendar-items>
        </view>
<!--      </day>
    </month>-->
  </year>
  <month value="10">
    <day value="14">
      <grid>
        <background src="kde4ever.png"/><!-- KDE's birthday -->
      </grid>
    </day>
  </month>
  <!-- FIXME: for testing purposes -->
  <some-unknown-element>
    <inside-some-unknown-element/>
  </some-unknown-element>
  <!-- /FIXME: for testing purposes -->
</korganizer-theme>
