<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE korganizer-theme>
<korganizer-theme version="1.0">
  <grid>
    <background color="#FFFFFF"/>
  </grid>
  <view type="Agenda">
    <grid>
      <background src="tux-filigrane.png"/><!-- This is only to test fancy things :) -->
      <work-hours>
        <background color="#E1E1FF"/>
      </work-hours>
    </grid>
    <time-labels>
      <font point-size="16"/>
    </time-labels>
    <calendar-items>
      <font point-size="8"/>
    </calendar-items>
  </view>
  <view type="Agenda">
    <calendar-items>
      <events>
        <font point-size="6"/>
      </events>
    </calendar-items>
  </view>
  <marcus-bains-line>
    <font point-size="8"/>
  </marcus-bains-line>
  <calendar-items>
    <background color="#97EB79"/>
    <events>
      <icon name="event"/>
    </events>
    <to-dos>
      <icon name="to-do"/>
      <due-today>
        <background color="#FFC832"/>
      </due-today>
      <overdue>
        <background color="#FF6464"/>
      </overdue>
    </to-dos>
    <categories>
      <appointment>
      </appointment>
      <birthday>
      </birthday>
      <business>
      </business>
      <education>
      </education>
      <holiday>
      </holiday>
      <meeting>
      </meeting>
      <miscellaneous>
      </miscellaneous>
      <personal>
      </personal>
      <phone-call>
      </phone-call>
      <special-occasion>
      </special-occasion>
      <travel>
      </travel>
      <vacation>
      </vacation>
    </categories>
    <resources>
      <default-calendar>
      </default-calendar>
      <birthdays>
      </birthdays>
    </resources>
    <frame color="#D8DBD5"/>
  </calendar-items>
  <holidays>
    <background color="#FF6464"/>
  </holidays>
  <year value="1534">
<!--    <month value="1">
      <day value="1">-->
        <!-- Konqi's birthday, TODO: make it special! -->
        <view type="Agenda">
          <Agenda>
            <background src="konqui.png"/>
          </Agenda>
          <calendar-items>
            <events>
              <icon src="Scotland-flag.png"/><!-- he's born in the Highlands after all :) -->
            </events>
          </calendar-items>
        </view>
<!--      </day>
    </month>-->
