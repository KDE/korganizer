KDE_FIND_PATH(perl, PERL, [],
	[
	  AC_MSG_WARN([Couldn't find perl 5 or later. ical2vcal will not work.])		],
	[-e 'require 5.000;']
)

AC_SUBST(PERL)

KDE_CHECK_STL
AC_HEADER_DIRENT
AC_HEADER_STDC
