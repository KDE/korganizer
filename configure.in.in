	sys/ioctl.h sys/stropts.h malloc.h sys/sockio.h \
	sys/m_wait.h sys/param.h libgen.h)
AC_HEADER_TIME

AC_LANG_C
AC_C_LONG_DOUBLE
AC_TYPE_GETGROUPS

